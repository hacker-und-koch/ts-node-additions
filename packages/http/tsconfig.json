{
    "compilerOptions": {
        "declarationDir": "declarations",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "outDir": "bin/",
        "declaration": true,
        "baseUrl": "bin/",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2020",
        "lib": [
            "es2015"
        ],
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],

    "compileOnSave": true
}
